<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mtbatis.org//DTO Mapper 3.0/EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<!-- 동적쿼리 : 검색을 위한 동적 조건부여 -->
	<sql id="dynamicCondition">
		<where>
			<if test="!(stype == '' or sword == '')">
				${stype} like '%'||#{sword}||'%'
			</if>
		</where>
	</sql>

	<select id="selectBoardList" parameterType="map"
		resultType="boardVo">
		select A.* from (
		select rownum as rnum, B.* from (
		select * from boardtab
		<include refid="dynamicCondition" />
		order by num desc) B
		        <![CDATA[
		        where rownum <= #{end}) A 
		    where A.rnum >= #{start}
		     ]]>
	</select>
	
	<select id="getTotalCount" parameterType="map" resultType="int">
		select count(*) from boardtab 
		<include refid="dynamicCondition" />
	</select>
	
	<insert id="insertBoard" parameterType="boardVo">
		insert into boardtab
		values (boardtab_num_seq.nextval, #{subject}, #{writer}, 
		        #{mail}, #{password}, #{content}, 0, #{wip}, sysdate)
	</insert>
	
	<delete id="deleteBoard" parameterType="int">
		delete from boardtab wherer num = #{data}
	</delete>
	
	<update id="updateBoard" parameterType="boardVo">
		update boardtab 
		set subject = #{subject}, content = #{content}, mail = #{mail}, wip = #{wip}, wdate = sysdate
		where num = #{num}
	</update>
	
	<update id="updateHit" parameterType="int">
		update boardtab
		set hit = hit+1
		where num = #{data}
	</update>
</mapper>